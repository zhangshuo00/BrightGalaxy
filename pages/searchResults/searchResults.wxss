/* pages/searchResults/searchResults.wxss */
.list-card{
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: row;
}
.list-card-item{
    width: 75%;
    background-color: white;
    border-radius: 10px;
    border: 1px solid #e7ecfb;
    box-shadow: 0 0 30px rgba(211, 220, 248, .3);
    padding: 10px;
    margin-top: 15px;
}
.card-noresult{
    width: 75%;
    background-color: white;
    border-radius: 10px;
    border: 1px solid #e7ecfb;
    box-shadow: 0 0 30px rgba(211, 220, 248, .3);
    padding: 10px;
    margin-top: 30px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}
.card-title{
    font-family: "Open Sans", sans-serif;
    font-size: 14px;
    font-weight: 800;
    border: 1px solid transparent;
    border-radius: 9px;
    color: #a5673f;
    padding: 9px 18px;
}
.card-feedback{
    width: 80%;
    font-family: "Open Sans", sans-serif;
    font-size: 14px;
    font-weight: 600;
    border: 0;
    border-radius: 9px;
    color: white;
    padding: 12px 10px 12px 18px;
    background: #a5673f;
    text-align: center;
}
.card-top{
    margin-left: 5%;
}
.card-bottom{
    width: 90%;
    margin-left: 5%;
    margin-top: 10px;
    font-size: 14px;
    font-family: "Open Sans", sans-serif;
}