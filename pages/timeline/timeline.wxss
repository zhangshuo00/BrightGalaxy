/* pages/search/search.wxss */
.container{
  padding: 20rpx;
  width: 100%;
}
.container input{
  border-bottom: solid 6rpx blanchedalmond;
  line-height: 30rpx;
  margin-top: 150rpx;
  margin-bottom: 30rpx;
}
.container button{
  max-width: 300rpx;
  width: 400rpx;
  font-size: 30rpx;
}
.changeTab{
  display: none
}

.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 150rpx;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}
.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}
.VerticalBox{
  display: flex;
}
.VerticalMain{
  background-color: #f1f1f1;
}