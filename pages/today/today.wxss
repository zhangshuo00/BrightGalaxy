/* pages/today/today.wxss */

/* time */
.timebox{
  /* height: 120rpx; */
  padding: 30rpx;
  background: #a5673F;
  text-align: center;
}
.time{
  color: #fff;
  font-size: 50rpx;
  font-weight: 1000
}

/* index */
.indexbox{
  height: 230rpx;
  padding-top: 40rpx;
  padding-bottom: 40rpx;
  display: flex;
  background: #fff;
}
.index{
  flex: 1;
  height: 100rpx;
  text-align: center;
  /* background: #fff; */
  /* border: 2rpx solid #000; */
}
.index-icon{
  width: 100rpx;
  height: 100rpx;
  padding: 25rpx;
  border-radius: 100rpx;
  background: #a5673F;
  margin: 0 auto;
  text-align: center;
  font-size: 35rpx;
  font-weight: 900;
  color: #fff;
}
.index-text{
  height: 30rpx;
  margin: 10rpx;
  font-size: 30rpx;
  /* background: #888; */
}

/* event */
.event{
  padding-top: 20rpx;
  padding-bottom: 40rpx;
  padding-left: 5%;
  padding-right: 5%;
  background: #fff;
}
.event-head{
  height: 70rpx;
  padding: 17.5rpx 0;
}
.event-head-dot{
  height: 20rpx;
  width: 20rpx;
  margin-top: 15rpx;
  float: left;
  border-radius: 20rpx;
  background: #a5673F;
}
.event-head-text{
  float: left;
  font-size: 35rpx;
  font-weight: 1000;
  color: #a5673F;
  margin-left: 15rpx;
  /* background: #000; */
}
.event-list{
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  /* background: #000; */
}
.event-card{
  height: 180rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  /* background: #fff; */
  display: flex;
  /* flex-direction: 'row'; */
}
.event-card-left{
  flex: 1;
  background: #3228;
}
.event-card-img{
  width: 100%;
  height: 100%;
  background: #000
}
.event-card-right{
  flex: 2;
  padding-left: 20rpx;
  /* background: #3222; */
}
.event-card-title{
  font-size: 30rpx;
  font-weight: 1000;
}
.event-card-time{
  font-size: 30rpx;
  color: #a5673F;
  margin-left: 20rpx;
}
.event-card-text{
  padding-top: 10rpx;
  font-size: 30rpx;
  color: grey
}

.event-card2{
  /* height: 50rpx; */
  width: 100%;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  /* background: #fff; */
  display: flex;
  /* flex-direction: 'row'; */
}
.event-card-time2{
  float: left;
  width: 15%;
  font-size: 30rpx;
  color: #fff;
  padding: 10rpx 10%;
  /* margin-left: 20rpx; */
}
.event-card-text2{
  float: left;
  width: 85%;
  padding-left: 30rpx;
  padding-top: 5rpx;
  font-size: 30rpx;
  color: #303133
}